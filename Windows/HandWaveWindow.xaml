<Window x:Class="Diplom.Windows.HandWaveWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        WindowState="Maximized"
ResizeMode="NoResize"
        xmlns:local="clr-namespace:Diplom.Windows"
        Name="this"
        mc:Ignorable="d"
        Title="HandWWindow" Height="800" Width="1200"  Background="White">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"/>

            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="0.1*"/>

        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="2*" />
               
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <Viewbox VerticalAlignment="Top" HorizontalAlignment="Left" >
                    <StackPanel VerticalAlignment="Top"  
    >
                        <GroupBox VerticalAlignment=" Top" FontSize="20" >
                            <GroupBox.Header>
                                <Viewbox Width="auto">
                                    <Label Background="White" Width="350">
                                        Параметры отражения
                                    </Label>

                                </Viewbox>
                            </GroupBox.Header>
                            <Grid>

                                <StackPanel>



                                    <TextBox
                  materialDesign:HintAssist.Hint="Угол падения"
                          
                  materialDesign:TextFieldAssist.SuffixText="°"
                  Grid.Row="0" Grid.Column="1" Margin="5" VerticalAlignment="Center"
                  VerticalContentAlignment="Center"  >
                                        <TextBox.Text>
                                            <Binding Path="AngleOfIncidence" ConverterCulture="ru-RU">
                                                <Binding.ValidationRules>

                                                </Binding.ValidationRules>
                                            </Binding>
                                        </TextBox.Text>

                                    </TextBox>
                                    <TextBox
                   materialDesign:HintAssist.Hint="Угол отражения"
                   materialDesign:TextFieldAssist.SuffixText="°"
                   Grid.Row="0" Grid.Column="1" Margin="5" VerticalAlignment="Center"
                   VerticalContentAlignment="Center" IsReadOnly="True"  >
                                        <TextBox.Text>
                                            <Binding Path="AngleOfReflection" ConverterCulture="ru-RU">
                                                <Binding.ValidationRules>

                                                </Binding.ValidationRules>
                                            </Binding>
                                        </TextBox.Text>
                                    </TextBox>
                                    <TextBox
                                        materialDesign:HintAssist.Hint="Координата точки отражения по X"
                                        materialDesign:TextFieldAssist.SuffixText="м"
                                        Grid.Row="0" Grid.Column="1" Margin="5" VerticalAlignment="Center"
                                        VerticalContentAlignment="Center" IsReadOnly="True" >

                                        <TextBox.Text>
                                            <Binding Path="XReflection" ConverterCulture="ru-RU">
                                                <Binding.ValidationRules>

                                                </Binding.ValidationRules>
                                            </Binding>
                                        </TextBox.Text>
                                    </TextBox>
                                    <TextBox
         materialDesign:HintAssist.Hint="Координата точки отражения по Y"
         materialDesign:TextFieldAssist.SuffixText="м"
         Grid.Row="0" Grid.Column="1" Margin="5" VerticalAlignment="Center"
         VerticalContentAlignment="Center" IsReadOnly="True" >

                                        <TextBox.Text>
                                            <Binding Path="YReflection" ConverterCulture="ru-RU">
                                                <Binding.ValidationRules>

                                                </Binding.ValidationRules>
                                            </Binding>
                                        </TextBox.Text>
                                    </TextBox>
                                    <TextBox
                  materialDesign:HintAssist.Hint="Координата тройной точки по X"
                  materialDesign:TextFieldAssist.SuffixText="м"
                  Grid.Row="0" Grid.Column="1" Margin="5" VerticalAlignment="Center"
                  VerticalContentAlignment="Center" IsReadOnly="True"  >

                                        <TextBox.Text>
                                            <Binding Path="XWatcher" ConverterCulture="ru-RU">
                                                <Binding.ValidationRules>

                                                </Binding.ValidationRules>
                                            </Binding>
                                        </TextBox.Text>
                                    </TextBox>
                                    <TextBox
                 materialDesign:HintAssist.Hint="Координата тройной точки по Y"
                 materialDesign:TextFieldAssist.SuffixText="м"
                 Grid.Row="0" Grid.Column="1" Margin="5" VerticalAlignment="Center"
                 VerticalContentAlignment="Center" IsReadOnly="True" >

                                        <TextBox.Text>
                                            <Binding Path="YWatcher" ConverterCulture="ru-RU">
                                                <Binding.ValidationRules>

                                                </Binding.ValidationRules>
                                            </Binding>
                                        </TextBox.Text>
                                    </TextBox>

                                </StackPanel>


                            </Grid>

                        </GroupBox>


                    </StackPanel>

                </Viewbox>
            </Grid>
            <Grid Grid.Row="2">
                <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center" >
                    <Button 
Content="Расчёт тройной точки" Margin="25"
Background="White" BorderBrush="#42b445 " Foreground="Black"
HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Command="{Binding CalcReflectionCommand}"
Grid.Column="0" CommandParameter="{Binding ElementName=this}" />
                </Viewbox>
            </Grid>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="2">
            <Label
   
 Margin="10" VerticalAlignment="Bottom"
                FontSize="20"
VerticalContentAlignment="Center" 
  HorizontalContentAlignment="Center"
  
>
               Параметры отражённой ударной волны:
            </Label>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="3">
            <Label
   
 Margin="10" VerticalAlignment="Bottom"
                FontSize="20"
VerticalContentAlignment="Center" 
  HorizontalContentAlignment="Center"
  
>
                Параметры головной ударной волны:
            </Label>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="2">
            <DataGrid ItemsSource="{Binding ReflectionData}" AutoGenerateColumns="False" ColumnWidth="*"
IsReadOnly="True" Margin="15" Grid.Row="0" Grid.ColumnSpan="3" Name="resDG" >
                <DataGrid.Columns>
                   
                    <DataGridTextColumn Header="Расстояние от эпицентра, м" Width="1.3*"
                  Binding="{Binding Path=RadiusColumn}" />
                    <DataGridTextColumn Header="Избыточное давление, кПа" Width="1.2*"
                  Binding="{Binding Path= MaxPresureColumn}" />
                    <DataGridTextColumn Header="Импульс волны давления, кПа*с" Width="1.4*"
                  Binding="{Binding Path=WavePresureColumn}" />
                    <DataGridTextColumn Header="Время, с" Width="1*"
                  Binding="{Binding Path=Time}" />

                </DataGrid.Columns>

            </DataGrid>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="3">
            <DataGrid ItemsSource="{Binding HandData}" AutoGenerateColumns="False" ColumnWidth="*"
IsReadOnly="True" Margin="15" Grid.Row="0" Grid.ColumnSpan="3" >
                <DataGrid.Columns>

                    <DataGridTextColumn Header="Расстояние от эпицентра, м" Width="1.3*"
                  Binding="{Binding Path=RadiusColumn}" />
                    <DataGridTextColumn Header="Избыточное давление, кПа" Width="1.2*"
                  Binding="{Binding Path= MaxPresureColumn}" />
                    <DataGridTextColumn Header="Импульс волны давления, кПа*с" Width="1.4*"
                  Binding="{Binding Path=WavePresureColumn}" />
                    <DataGridTextColumn Header="Время, с" Width="1*"
                  Binding="{Binding Path=Time}" />

                </DataGrid.Columns>

            </DataGrid>
            
        </Grid>

    </Grid>
</Window>
