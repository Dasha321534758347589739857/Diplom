<Window x:Class="Diplom.Windows.EditKey"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Diplom.Windows"
        Name="this"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="EditKey" Height="400" Width="400">
    <Grid  Name="wrapPanel1">



        <ToggleButton
                Content="{materialDesign:PackIcon Kind=Heart,                                                         Size=21}"
                IsChecked="False"
                Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                BorderBrush="Green"
                Name="Button1"
                Margin="-100,-100,0,0"
                ToolTip="MaterialDesignFlatPrimaryToggleButton" Checked="Button1_Checked" />

        <ToggleButton
            Content="{materialDesign:PackIcon Kind=Heart,                                                         Size=21}"
            IsChecked="False"
            Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
            BorderBrush="Green"
            Name="Button2"
            Margin="100,-100,0,0"
            ToolTip="MaterialDesignFlatPrimaryToggleButton" Checked="Button2_Checked" />


        <ToggleButton
            Content="{materialDesign:PackIcon Kind=Heart,                                                         Size=21}"
            IsChecked="False"
            Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                  BorderBrush="Green"
                  Name="Button3"
                             Margin="-100,100,0,0"
            ToolTip="MaterialDesignFlatPrimaryToggleButton" Checked="Button3_Checked" />


        <ToggleButton
            Content="{materialDesign:PackIcon Kind=Heart,                                                         Size=21}"
            IsChecked="False"
            Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                  BorderBrush="Green"
                  Name="Button4"
                             Margin="100,100,0,0"
            ToolTip="MaterialDesignFlatPrimaryToggleButton" Checked="Button4_Checked" />

       

        <Button

            materialDesign:ButtonAssist.CornerRadius="35" Style="{StaticResource MaterialDesignRaisedButton}"
                Content="!" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
            Background="#D6FDD3" BorderBrush="Black" Width="50" Height="50" 
               Margin="250,250,0,0"
                        Name="ButtonNext" Cursor="Hand" Click="ButtonNext_Click"
               
                >
        </Button>

        <Button

            materialDesign:ButtonAssist.CornerRadius="35" Style="{StaticResource MaterialDesignRaisedButton}"
                Content="x" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
            Background="#D6FDD3" BorderBrush="Black" Width="50" Height="50" 
               Margin="-250,250,0,0"
                Click="ClearClick"
                >
        </Button>

    </Grid>
</Window>
